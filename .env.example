# Example environment variables for Polymarket Arbitrage Bot
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# POLYMARKET CONFIGURATION
# Get your API keys from: https://polymarket.com/settings/api
# =============================================================================
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_SECRET=your_polymarket_secret_here
POLYMARKET_WALLET_KEY=your_ethereum_wallet_private_key

# =============================================================================
# KALSHI CONFIGURATION  
# Get your API keys from: https://kalshi.com/account/api
# =============================================================================
KALSHI_EMAIL=your_email@example.com
KALSHI_PASSWORD=your_kalshi_password
KALSHI_API_KEY=your_kalshi_api_key_here

# =============================================================================
# PREDICTIT CONFIGURATION
# Login at: https://www.predictit.org
# =============================================================================
PREDICTIT_EMAIL=your_email@example.com
PREDICTIT_PASSWORD=your_predictit_password

# =============================================================================
# WALLET CONFIGURATION
# IMPORTANT: Keep these secure! Never share your private keys!
# =============================================================================
WALLET_ADDRESS=0xYourEthereumWalletAddress
PRIVATE_KEY=your_private_key_without_0x_prefix
MNEMONIC=your twelve or twenty four word seed phrase goes here

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
MIN_PROFIT_PERCENTAGE=2.5          # Minimum spread to execute trade (%)
MAX_POSITION_SIZE=500              # Maximum USD per trade
SLIPPAGE_TOLERANCE=0.5             # Max acceptable slippage (%)
AUTO_TRADE=true                    # Enable automatic trade execution
DRY_RUN=false                      # Set to true for testing without real trades

# =============================================================================
# NOTIFICATIONS (Optional but recommended)
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
LOG_LEVEL=info                     # Logging level: debug, info, warn, error
UPDATE_INTERVAL=5000               # Market data refresh interval (ms)
MAX_CONCURRENT_TRADES=3            # Maximum simultaneous positions
ENABLE_STOP_LOSS=true              # Enable automatic stop-loss
STOP_LOSS_PERCENTAGE=5             # Stop-loss trigger (%)
